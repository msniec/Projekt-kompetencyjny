<Page class="page"
    navigatingTo="onNavigatingTo" 
    xmlns="http://schemas.nativescript.org/tns.xsd">
    
    <ActionBar class="action-bar">
        <NavigationButton text="Back" android.systemIcon="ic_menu_back" tap="onNavBtnTap"/>
        <Label class="action-bar-title" text="Product Details"></Label>
    </ActionBar>
   
   <StackLayout>
   <Label text="Put your note here:">
   
   </Label>
   <TextField class="input input-border" text="{{ text }}"/>
   <Button text="Done" width="{{screenWidth / 6}}" height="50" tap="onReturnPress"></Button>
   </StackLayout>
    
        
    
</Page>
