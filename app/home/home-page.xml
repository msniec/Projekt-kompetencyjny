<Page class="page"
    navigatingTo="onNavigatingTo" 
    xmlns="http://schemas.nativescript.org/tns.xsd">
    
    <ActionBar class="action-bar">
        <Label class="action-bar-title" text="Projekt"></Label>
    </ActionBar>
    <GridLayout>
        <StackLayout>
            <StackLayout orientation="horizontal">
                <Button text="Voice"  width="{{screenWidth / 6}}" height="50" tap="voidF" backgroundColor="red"/>
                <Button text="Icons"  width="{{screenWidth / 6}}" height="50" tap="redirectToIcon" backgroundColor="green"/>
                <Button text="Images"  width="{{screenWidth / 6}}" height="50" tap="voidF" backgroundColor="blue"/>
            </StackLayout>
            <TextField class="input input-border" text="{{ text }}" returnKeyType="done" returnPress="onReturnPress" hint="test"/>
            <ListView items="{{ products }}" 
                separatorColor="orangered" rowHeight="50"
                itemTap="onItemTap"
                class="list-group" id="listView">
                <ListView.itemTemplate>
                    <StackLayout class="list-group-item">
                        <Label text="{{ name || 'Downloading...' }}" textWrap="true" class="title" tap="redirectToDetails"/>
                    </StackLayout>
                </ListView.itemTemplate>
            </ListView>
            <Button text="Delete all"  width="{{screenWidth / 6}}" height="50" tap="removeFromList" backgroundColor="pink"/>
            <Button text="Delete one"  width="{{screenWidth / 6}}" height="50" tap="removeOneItemFromList" backgroundColor="purple"/>
        </StackLayout> 
    </GridLayout>
</Page>
